<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
    http://www.springframework.org/schema/beans   
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.1.xsd
">

	<!-- indicamos a spring que escanee en busca de todas las anotaciones mediante -->
	<!-- el tag <context:component-scan > -->

	<!-- aqui solamente le indicamos el package que spring debe escanear en 
		busca de anotations -->

	<context:component-scan
		base-package="com.prueba.anotations"></context:component-scan>

</beans>